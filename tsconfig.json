{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "lib",
    "lib": [
      "es2015"
    ],
    "types": [
      "chai",
      "mocha",
      "sinon",
      "mockery",
      "node", 
      "lodash",
      "core-js",
      "colors",
      "vinyl",
      "vinyl-fs"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
